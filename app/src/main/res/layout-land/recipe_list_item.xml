<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/Image_View_Layout_Width"
        android:layout_height="@dimen/Image_View_height"
        android:contentDescription="@string/Recipemage"
        android:id="@+id/recipeImageView"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/linear_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipeNameTextView"
            android:textSize="@dimen/TextView_View_size"
            android:text="@string/recipeName"
            android:textStyle="bold"
            android:textColor="@color/colorTextIcons"/>

    </LinearLayout>
</LinearLayout>