<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/cuisineitemlayoutwidth"
        app:cardCornerRadius="@dimen/cuisineitemcardcornerradious"
        android:layout_margin="@dimen/cuisineitemlayoutmargin"
        android:layout_height="@dimen/cuisineitemlayoutheight">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cuisineitemlinerlayoutheight"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_id"
                android:focusable="true"
                android:contentDescription="@string/backgroundimage"
                android:layout_width="@dimen/cuisineitemimageView"
                android:layout_height="@dimen/cuisineitemimageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_title_name"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:textSize="@dimen/ButtonTextSize"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>